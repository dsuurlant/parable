{% extends 'base.html.twig' %}

{% block navigation %}
    <ul id="main-navigation" class="nav nav-tabs">
        <li class="nav-item"><a class="nav-link" href="{{ path('dashboard') }}">Dashboard</a></li>
        <li class="nav-item"><a class="nav-link" href="#">link</a></li>
        <li class="nav-item"><a class="nav-link" href="#">link</a></li>
        <li class="nav-item"><a class="nav-link" href="#">link</a></li>
        <li class="nav-item active">
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <a class="nav-link" href="{{ path('fos_user_profile_show') }}">Account</a>
            {% else %}
                <a class="nav-link"
                   href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
            {% endif %}
        </li>
    </ul>
{% endblock %}

{% block body %}
    {% if app.request.hasPreviousSession and app.session.flashbag.all is not empty %}
        <div class="content-block">
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="flash-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    {% endif %}

    <div class="content-block">
        {% block fos_user_content %}
        {% endblock fos_user_content %}
    </div>
{% endblock %}

{% block leftbar %}
    <div class="sidebar-block">
        <p>Placeholder for left sidebar content.</p>
    </div>
{% endblock %}

{% block rightbar %}
    <div class="sidebar-block">
        <p>Placeholder for right sidebar content.</p>
    </div>
{% endblock %}